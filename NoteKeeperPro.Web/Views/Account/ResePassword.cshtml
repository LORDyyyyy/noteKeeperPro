@using NoteKeeperPro.Web.ViewModels.Identity
@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResePassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		<div asp-validation-summary="All" class="text-danger"></div>
		<form asp-action="ResetPassword">

			<input asp-for="Password" placeholder="Enter Password" />
			<span asp-validation-for="Password" class="text-danger"></span>
			<br />

			<input asp-for="ConfirmedPassword" placeholder="Confirme Password" />
			<span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
			<br />

			<input type="submit" value="Reset Password">
		</form>
	</div>
</div>
@section ValidationScripts
{
	<partial name="_ValidationScriptsPartial" />
}



