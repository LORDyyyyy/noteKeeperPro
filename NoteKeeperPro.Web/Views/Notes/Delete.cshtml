@model NoteKeeperPro.Application.Dtos.Notes.NoteDto

@{
    ViewData["Title"] = "Delete Note";
}

<div class="container">
    <h1>Delete Note</h1>

    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this note?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">@(Model.Content.Length > 200 ? Model.Content.Substring(0, 200) + "..." : Model.Content)</p>
            
            <div class="mb-2">
                <strong>Created:</strong> @Model.CreatedAt.ToString("g")
            </div>
            <div class="mb-2">
                <strong>Last Updated:</strong> @Model.UpdatedAt.ToString("g")
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 