@model IEnumerable<NoteKeeperPro.Application.Dtos.Notes.NoteDto>

@{
    ViewData["Title"] = "Notes";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Notes</h1>
        <a asp-action="Create" class="btn btn-primary">Create New Note</a>
    </div>

    <div class="row">
        @foreach (var note in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@note.Title</h5>
                        <p class="card-text text-muted small">
                            Created: @note.CreatedAt.ToString("g")<br />
                            Updated: @note.UpdatedAt.ToString("g")
                        </p>
                        <p class="card-text">@(note.Content.Length > 150 ? note.Content.Substring(0, 150) + "..." : note.Content)</p>
                        
                        @if (note.Tags.Any())
                        {
                            <div class="mb-2">
                                @foreach (var tag in note.Tags)
                                {
                                    <span class="badge bg-primary me-1">@tag.Name</span>
                                }
                            </div>
                        }

                        @if (note.Collaborators.Any())
                        {
                            <div class="mb-2">
                                <small class="text-muted">Collaborators:</small>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var collaborator in note.Collaborators)
                                    {
                                        <span class="badge bg-secondary">@collaborator.User.Email</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary">Details</a>
                            <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 