@{
    ViewData["Title"] = "Share Note";
}

<div class="container">
    <h1>Share Note</h1>
    <h4>@ViewBag.NoteTitle</h4>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Share" method="post">
                <input type="hidden" name="id" value="@ViewBag.NoteId" />
                
                <div class="form-group mb-3">
                    <label for="collaboratorEmail" class="control-label">Collaborator Email</label>
                    <input type="email" name="collaboratorEmail" id="collaboratorEmail" class="form-control" required />
                    <small class="form-text text-muted">Enter the email address of the person you want to share this note with.</small>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Share</button>
                    <a asp-action="Details" asp-route-id="@ViewBag.NoteId" class="btn btn-secondary">Back to Note</a>
                </div>
            </form>
        </div>
    </div>
</div> 