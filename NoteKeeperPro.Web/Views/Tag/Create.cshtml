@using NoteKeeperPro.Application.Dtos.Tags
@using NoteKeeperPro.Domain.Entities.Tags
@model NoteKeeperPro.Web.ViewModels.Tags.TagViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="Note" asp-action="Create" class="col-8">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

  <div class="mt-4">
        <input type="submit" value="@ViewBag.Action" class="btn btn-primary" />
        <a asp-controller="Note" asp-action="Index" class="btn btn-outline-dark">Back to List</a>
    </div>
</form>





